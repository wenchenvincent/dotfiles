alias drun="docker run -it  --network=host --ipc=host --shm-size 16G --group-add video --cap-add=SYS_PTRACE --security-opt seccomp=unconfined --device=/dev/kfd --device=/dev/dri -v $HOME/dockerx:/dockerx  -v /data:/data -v $HOME/.gitconfig:/etc/gitconfig -v $HOME/.vimrc:/root/.vimrc "
alias ndrun="docker run -it --gpus all  --network=host --ipc=host --shm-size 16G --group-add video --cap-add=SYS_PTRACE --security-opt seccomp=unconfined -v $HOME/dockerx:/dockerx  -v /data:/data -v $HOME/.gitconfig:/etc/gitconfig -v $HOME/.vimrc:/root/.vimrc "
