alias drun="docker run -it  --network=host --ipc=host --shm-size 16G --group-add video --cap-add=SYS_PTRACE --security-opt seccomp=unconfined --device=/dev/kfd --device=/dev/dri -v $HOME/dockerx:/dockerx  -v /data:/data -v $HOME/.gitconfig:/etc/gitconfig -v $HOME/.vimrc:/root/.vimrc -v $HOME/.vim:/root/.vim "
alias ndrun="docker run -it --gpus all  --network=host --ipc=host --shm-size 16G --group-add video --cap-add=SYS_PTRACE --security-opt seccomp=unconfined -v $HOME/dockerx:/dockerx  -v /data:/data -v $HOME/.gitconfig:/etc/gitconfig -v $HOME/.vimrc:/root/.vimrc -v $HOME/.vim:/root/.vim "
alias prun="podman run -it --device=/dev/dri --device=/dev/kfd  --network=host --ipc=host --group-add keep-groups  -v $HOME/dockerx:/dockerx  -v $HOME/.gitconfig:/etc/gitconfig -v $HOME/.vimrc:/root/.vimrc -v $HOME/.vim:/root/.vim "
alias docker_with_pid='f(){ docker ps -q | xargs -I {} sh -c "docker top {} | grep -q $1 && docker ps --filter id={} --format \"{{.Names}} ({{.ID}})\"";}; f'
